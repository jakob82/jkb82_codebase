PS3='Please enter your choice: "\n 1) make github contribution automatically" "\n 2) make a gitpull automatically" "\n 2) clone a github repository automatically" "\n 3) check current github repository issues" "\n 4) asciiart" "\n 5) turn ascii art into text file" "\n 6) check current github repository issues" "7) quit"'
options=("make github contribution automatically" "make a gitpull automatically" "clone a github repository automatically" "check current github repository issues" "asciiart" "turn ascii art into text file" "quit")
select opt in "${options[@]}"
do
    case $opt in
        "git interface")
            script="_git_interface.sh"
            eval $script
            ;;
        "media download interface")
            script="_downloadMediaInterface.sh"
            eval $script
            ;;
        "ascii art interface")
            script="_asciiArtShellInterface.sh"
            eval $script
            ;;
        "turn off shell interface")
            script="_turnOffShellInterface.sh"
            eval $script
            ;;
        "check better documentation for specific shell commands")
            script="_tmmShellInterface.sh"
            eval $script
            ;;
        "hash interface")
            script="_tmmHashInterface.sh"
            eval $script
            ;;
        "system info interface")
            script="_tmmSysInfoInterface.sh"
            eval $script
            ;;
        "get free wifi (needs further tweaking)")
            script="fwn.sh"
            eval $script
            ;;
        "install specific software package")
            echo "select a software package to install"
            read $softwarePackage
            script="tmm_isw.sh $softwarePackage"
            eval $script
            ;;
        "quit")
            break
            ;;
        *) echo invalid option;;
    esac
done
