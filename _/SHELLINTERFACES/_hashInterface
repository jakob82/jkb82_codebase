PS3='Please enter your choice: "\n 1) make github contribution automatically" "\n 2) make a gitpull automatically" "\n 2) clone a github repository automatically" "\n 3) check current github repository issues" "\n 4) asciiart" "\n 5) turn ascii art into text file" "\n 6) check current github repository issues" "7) quit"'
options=("make github contribution automatically" "make a gitpull automatically" "clone a github repository automatically" "check current github repository issues" "asciiart" "turn ascii art into text file" "quit")
select opt in "${options[@]}"
do
    case $opt in
        "generate password")
            script="gh.sh"
            eval $script
            ;;
        "generate a passwrod)")
            echo "set password length"
            read $length
            echo "set number of Passwords"
            read $numPass
            script="pwg.sh $length $numPass"
            eval $script
            ;;
        "generate a single 80 chars hash")
            script="pwg801.sh"
            eval $script
            ;;
        "generate a single 200 chars hash")
            script="pwg2001.sh"
            eval $script
            ;;
        "generate a single 400 chars hash")
            script="pwg4001.sh"
            eval $script
            ;;
        "generate a single 800 chars hash")
            script="pwg8001.sh"
            eval $script
            ;;
        "quit")
            break
            ;;
        *) echo invalid option;;
    esac
done
